@using AngleSharp.Dom
@model List<AbyssAzul.Models.Search>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
    var heading = ViewBag.Heading;
    var subHeading = ViewBag.SubHeading;
}

<div style="padding-top: 75px;"></div>
<section class="hero">

    <div class="container">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb justify-content-center">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Search Results</li>
        </ol>
        <!-- Hero Content-->
        <div class="hero-content pb-5 text-center">
            <h1 class="hero-heading">@heading</h1>
            <div class="row">
                <div class="col-xl-8 offset-xl-2">
                    <p class="lead">@subHeading</p>
                </div>
            </div>
        </div>
    </div>
</section>
@if (Model.Count > 0)
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-xl-12 text-center">
                    <table class="table table-borderless table-hover table-responsive-md">
                        <thead class="bg-info">
                            <tr>
                                <th class="py-4 text-uppercase text-sm"></th>

                                <th class="py-4 text-uppercase text-sm">Name</th>
                                <th class="py-4 text-uppercase text-sm">Other Name</th>
                                <th class="py-4 text-uppercase text-sm">Latin Name</th>
                                <th class="py-4 text-uppercase text-sm">Common Name(s)</th>
                                <th class="py-4 text-uppercase text-sm">Region</th>
                                <th class="py-4 text-uppercase text-sm">Origin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model)
                            {
                                    <tr onclick="location.href = '@(Url.Action("Product","Product", new {productId = row.ProductId}))'">
                                        <td class="py-4 align-middle">
                                            <a href="/Product/Product?productId=@row.ProductId"><img class="cart-item-img" src="/Content/html/img/@row.ImgFileName" alt="@row.Name"></a>
                                        </td>
                                        <th class="py-4 align-middle">@row.Name</th>
                                        <td class="py-4 align-middle">@row.OtherName</td>
                                        <td class="py-4 align-middle">@row.LatinName</td>
                                        <td class="py-4 align-middle">@row.CommonName</td>
                                        <td class="py-4 align-middle">@row.Region</td>
                                        <td class="py-4 align-middle">@row.Origin</td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
}



