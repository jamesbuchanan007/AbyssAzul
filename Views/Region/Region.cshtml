
@model IEnumerable<AbyssAzul.Models.Product>

@{
    var rowNum = 0;
    var viewName = ViewBag.RegionNameView;
    var imgUrl = ViewBag.ImgURL;
}

@*<div style="margin-top: 20px"></div>*@
<section class="position-relative dark-overlay py-3 py-lg-7 overflow-hidden" data-parallax="scroll" data-image-src="/Content/html/img/@imgUrl" data-speed="0.3" data-position-x="right">
    <div class="container overlay-content hero hero-page">
        <ul class="breadcrumb justify-content-center no-border mb-0">
            <li class="breadcrumb-item"><a class="text-white" href="/Home/Index">Home</a></li>
            <li class="breadcrumb-item text-white active">@viewName</li>
        </ul>
        <div class="hero-content pb-5 text-center text-white">
            <h1 class="hero-heading">@viewName</h1>
        </div>
    </div>
</section>
<div class="container" style="padding-top: 35px;">
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="product">
                    <div class="product-image">
                        <img class="img-fluid summaryImages" src="/Content/html/img/@p.FileName" alt="@p.Name" />
                        <div class="product-hover-overlay">
                            <a class="product-hover-overlay-link" href="/Product/Product?productId=@p.ProductId"></a>
                            <div class="product-hover-overlay-buttons">
                                <a class="btn btn-dark btn-buy" href="/Product/Product?productId=@p.ProductId">
                                    <span class="btn-buy-label ml-2">View</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="py-2">
                        <h3 class="h6 text-uppercase mb-1">
                            <a class="text-dark" href="/Product/Product?productId=@p.ProductId">@p.Name</a>
                        </h3>
                    </div>
                </div>
            </div>
            if (rowNum % 4 == 0)
            {
                @:</div><div class="row">
                rowNum = 0;
            }
            rowNum++;
        }
    </div>
</div>
